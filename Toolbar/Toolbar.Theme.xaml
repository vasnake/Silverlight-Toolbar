<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="clr-namespace:ESRI.ArcGIS.Client.Toolkit">

	<Style TargetType="local:Toolbar">
		<Setter Property="ToolbarItemClickEffect" Value="Bounce" />
		<Setter Property="MaxItemHeight" Value="110" />
		<Setter Property="MaxItemWidth" Value="110" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="local:Toolbar">
					<StackPanel x:Name="RootElement" Orientation="Horizontal" Background="Transparent" HorizontalAlignment="Center">
					</StackPanel>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

</ResourceDictionary>
